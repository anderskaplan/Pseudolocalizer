<Window x:Class="PseudoLocalizerApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    
    <Window.CommandBindings>
        <CommandBinding Command="Close" Executed="OnCloseCommand" />
    </Window.CommandBindings>
    
    <DockPanel>
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="File">
                <MenuItem Command="Open" Header="Open Project..." />
                <MenuItem Command="Save" Header="Save" />
                <Separator />
                <MenuItem Command="Close" Header="Exit" />
            </MenuItem>
        </Menu>
        
        <Grid>
        </Grid>
    </DockPanel>
</Window>
